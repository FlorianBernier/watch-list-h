<%# FORMULAIRE DE LISTE DE FILM %>
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-6 m-3 bg-white rounded p-3 shadow">
      <h2 class="text-center">Create a new list</h2>
      <%= simple_form_for @list do |f| %>
        <%= f.input :name, placeholder: 'Action' %>
        <%= f.input :photo, as: :file %>
        <div class="d-flex align-items-center justify-content-between">
          <%= f.submit class: 'btn btn-primary' %>
          <%= link_to "Back", "javascript:history.back()", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
