<div class="text-center py-5 ">
  <h1>Sauvegardez vos meilleurs films</h1>
</div>

<div class="container py-3">
  <div class="d-flex align-items-center justify-content-between ">
    <h3>Ma liste</h3>
    <%= link_to "Créé une liste de film", new_list_path, class: "btn btn-primary" %>
  </div>
  <div class="">
    <% @lists.each do |list| %>
      <div class="d-flex align-items-center justify-content-between bg-white rounded p-3 shadow">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <%= list.name %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
