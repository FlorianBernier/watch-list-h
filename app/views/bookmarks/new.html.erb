<%# FORMULAIRE DE FILM %>
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-6 m-3 bg-white rounded p-3 shadow">
      <h3 class="text-center">Add a movie to the <%= @list.name %> list</h3>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment, placeholder: "Enter a comment about the film" %>
        <%= f.association :movie, prompt: "Select a movie", input_html: {data: {controller: "tom-select"}} %>
        <div class="d-flex align-items-center justify-content-between">
          <%= f.submit class: "btn btn-primary" %>
          <%= link_to "Back", "javascript:history.back()", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
